{
  "compilerOptions": {
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [ "es6", "es2017", "dom", "esnext.asynciterable"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
